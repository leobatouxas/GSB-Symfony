{% extends 'base.html.twig' %}

{% block title %}Hello FeesheetController!{% endblock %}

{% block body %}
<div class="text-center">
    <h1>Fiches frais</h1>
</div>
<div>
    <a class="btn btn-primary" href="#" role="button">Ajouter</a>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Montant Valide</th>
      <th scope="col">Etat</th>
      <th scope="col">Affichage</th>
    </tr>
  </thead>
  <tbody>
  {% for feesheet in feesheets %}
    <tr>
      <td>{{ feesheet.date|date("M") ~ ' '  ~ feesheet.date|date("Y")}}</td>
      <td>{{ feesheet.validAmount }}</td>
      <td>{{ feesheet.state.name }}</td>
      <td><a href="{{path('app_feesheet_show',{'id': feesheet.id})}}">Voir plus</a></td>
    </tr>
    {% endfor %}
    
    
  </tbody>
</table>


    
{% endblock %}
