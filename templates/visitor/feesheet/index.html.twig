{% extends 'base.html.twig' %}

{% block title %}GSB - Visiteur - Fichefrais{% endblock %}

{% block body %}
<div class="text-center">
    <h1>Fiches frais</h1>
</div>


{{ form_start(form) }}
<div class="d-flex flex-row align-items-center">
    <div>
      {{ form_widget(form) }}
    </div>
    <div class="align-self-end mx-1">
        <button type="submit" class="btn btn-primary">Ajouter</button>
    </div>
	</div>
{{ form_end(form) }}



<table class="table">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Montant Valide</th>
      <th scope="col">Etat</th>
      <th scope="col">Affichage</th>
    </tr>
  </thead>
  <tbody>
  {% for feesheet in feesheets %}
    <tr>
      <td>{{ feesheet.date|date("M") ~ ' '  ~ feesheet.date|date("Y")}}</td>
      <td>{{ feesheet.validAmount }}</td>
      <td>{{ feesheet.state.name }}</td>
      <td><a href="{{path('app_visitor_feesheet_show',{'id': feesheet.id})}}">Voir plus</a></td>
    </tr>
    {% endfor %}
    
    
  </tbody>
</table>


    
{% endblock %}
